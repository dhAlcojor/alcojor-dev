---
interface Props {
  title: string;
}

const {title} = Astro.props;
---

<!doctype html>
<html lang="es">
<head>
    <meta charset="UTF-8"/>
    <meta name="description" content="Daniel H. Alcojor - Senior Full-stack Developer"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <link rel="icon" type="image/png" href="/images/profile.png"/>
    <title>{title}</title>
</head>
<body>
    <header class="w-full py-4 px-6 flex items-center justify-between fixed top-0">
        <h1 class="text-5xl font-bold font-permanent-marker">
            <img class="h-8 w-8 inline-block align-baseline -mr-2 border-[1px] border-black rounded-full" src="/images/profile.png" alt="Foto de perfil de Daniel H. Alcojor"/>
            <a href="/">Daniel H. Alcojor</a>
        </h1>
        <nav>
            <ul class="flex">
                <li><a href="/#home">Inicio</a></li>
                <li><a href="/#projects">Proyectos</a></li>
                <li><a href="/#about">Acerca de</a></li>
                <li><a href="/#contact">Contacto</a></li>
            </ul>
        </nav>
    </header>
    <slot/>
</body>
</html>
<style is:global>
@font-face {
    font-family: 'Permanent Marker';
    src: url('/fonts/PermanentMarker-Regular.ttf') format('truetype');
    font-weight: 700;
    font-style: normal;
    font-display: swap;
}
body {
    @apply font-sans;
    font-size: 14pt;
}

p {
    @apply lg:w-1/2 lg:mx-auto lg:text-center;
}
</style>
<style>
    nav a {
        @apply block px-4 py-2 text-center rounded-lg;

        &:hover {
            @apply bg-white/40;
        }

        &.active, &:focus {
            @apply bg-white/70 font-bold;
        }
    }
</style>
<script is:inline>
    function markActiveSection(sectionName) {
        document.querySelectorAll('nav a').forEach(a => a.classList.remove('active'));
        document.querySelector(`nav a[href="/#${sectionName}"]`).classList.add('active');
    }
    // Scroll to the current section when the page loads
    const currentSection = window.location.hash.slice(1);
    console.log("Section when loading:", currentSection);
    if (currentSection) {
        document.querySelector(`section#${currentSection}`).scrollIntoView({behavior: 'smooth'});
        markActiveSection(currentSection);
    } else {
        markActiveSection('home');
    }
    // Mark the current section when the user clicks on a link
    document.querySelectorAll('nav a').forEach(a => a.addEventListener('click', e => {
        const sectionName = e.target.getAttribute('href').split("/#")[1];
        console.log("Section when clicking:", sectionName);
        document.querySelector(`section#${sectionName}`).scrollIntoView({behavior: 'smooth'});
        markActiveSection(sectionName);
    }));
</script>
